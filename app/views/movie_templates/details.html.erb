<h1>Movie #<%= @the_movie.id %> details</h1>

<a href="/movies">Go back</a>

<hr>


<dl>

  <dt>Ttile</dt>
  <dd><%= @the_movie.title %></dd>

  <dt>Year</dt>
  <dd><%= @the_movie.year %></dd>

  <dt>Duration</dt>
  <dd><%= @the_movie.duration %></dd>

  <dt>Description</dt>
  <dd><%= @the_movie.description %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @the_movie.image %>" alt="image"></dd>

  <dt>Director</dt>
  <dd><%= Director.where({ :id => @the_movie.director_id })[0].name %></dd>

  <dt>Created at</dt>
  <dd><%= @the_movie.created_at %></dd>

  <dt>Updated at</dt>
  <dd><%= @the_movie.updated_at %></dd>

</dl>
