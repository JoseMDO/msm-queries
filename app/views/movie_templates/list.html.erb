
<h1>List of all movies</h1>


<table border="1">

  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>


  <% Movie.all.each do |movie| %>
  <tr>
    <td><%= movie.id %></td>
    <td><img width="200" src="<%= movie.image %>" alt=""></td>
    <td><%= movie.title %></td>
    <td><%= movie.year %></td>
    <td>
      <% match = Director.where({ :id => movie.director_id}) %>
      <% the_director = match[0] %>

      <%= the_director.name %>
    </td>
    <td>
      <a href="/movies/<%= movie.id %>">Show details</a>
    </td>
  </tr>

  <% end %>


</table>
